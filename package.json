    "@types/node": "^22.19.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.18"
  }
